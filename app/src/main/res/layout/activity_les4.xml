<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6a7d8a"
    tools:context=".les4">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="90dp"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView33"
            android:layout_width="320dp"
            android:layout_height="246dp"
            android:layout_marginTop="10dp"
            android:text="        Стадии разработки ПО –  этапы, которые проходят разработчики до того, как проект станет доступным для пользователей. \n
       Разработка начинается с первоначального этапа процесса (пре-альфа), продолжается поэтапно. На каждом «шаге» контент будет дорабатываться. Финальная стадия – выпуск окончательной версии системы или ПО."
            android:textColor="#667D8A"
            android:textSize="18dp" />


        <ScrollView
            android:layout_width="317dp"
            android:layout_height="310dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/textView34"
                android:layout_width="322dp"
                android:layout_height="377dp"
                android:text="   Жизненный цикл можно представить похожим на этапы тестирования. Он обычно включает в себя:
        \n
\n - непосредственный анализ требований к приложению или системе;
\n - проектирование;
\n - реализацию;
\n - тестирование;
\n - внедрение и поддержку.
\n
\n Каждая стадия получает свое «имя» или порядковый номер: пре-альфа, альфа, бета, релиз-кандидат, релиз, а также пост-релиз."
                android:textColor="#667D8A"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent" />

        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Занятие 4"
        android:textColor="#EDEDEF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="82dp"
        android:layout_height="62dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/home" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="73dp"
        android:layout_height="62dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_sit" />
</androidx.constraintlayout.widget.ConstraintLayout>