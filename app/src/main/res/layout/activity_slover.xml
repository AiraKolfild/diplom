<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6a7d8a"
    tools:context=".slover">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="90dp"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="305dp"
            android:layout_height="108dp"
            android:layout_marginTop="15dp"
            android:text="- Системное тестирование – проверка работоспособности операционных систем. Важный процесс, без которого не состоится ни один релиз ОС."
            android:textColor="#667D89"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text=" - Тестирование систем и программного обеспечения - исследование и испытание приложений. Цель – проверка соответствия между реальным поведением ПО с ожиданиями."
            android:textColor="#667D89"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="272dp"
            android:layout_height="131dp"
            android:layout_marginTop="10dp"
            android:text="QC – контроль качества продукта (системы). Представляет собой анализ результатов тестирования и качества новых версия проекта."
            android:textColor="#667D89"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="260dp"
            android:layout_height="119dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:text="QA – это обеспечение качества продукта. Процесс изучения возможностей по внесению изменений и улучшению разработки."
            android:textColor="#667D89"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cat_stand" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Краткий словарик терминов"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="28dp" />

    <ImageButton
        android:id="@+id/imageButton24"
        android:layout_width="82dp"
        android:layout_height="62dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/imageButton20"
        android:layout_width="72dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/next" />

</androidx.constraintlayout.widget.ConstraintLayout>