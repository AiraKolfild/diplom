<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6a7d8a"
    tools:context=".slovar1">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="90dp"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="309dp"
            android:layout_height="186dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="   Качество ПО – совокупность характеристик системы, которые относятся к ее способности удовлетворять установленные и предполагаемые потребности. То, насколько контент соответствует изначальным критериям."
            android:textColor="#667D8A"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="372dp"
            android:layout_height="112dp"
            android:layout_marginTop="5dp"
            android:text="   Валидация – соответствие программного продукта или системы ожиданиям, желаниям, потребностям пользователя. То, насколько ПО соответствует явным требованиям."
            android:textColor="#667D89"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="285dp"
            android:layout_height="165dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:text="   Верификация – процесс оценки системы или ее компонентов. Делается это для того, чтобы проверить, насколько результаты разработки на заданном этапе удовлетворяют начальным требованиям."
            android:textColor="#667D8A"
            android:textSize="18dp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton25"
        android:layout_width="72dp"
        android:layout_height="57dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="back"
        android:rotationY="-174"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/next" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="82dp"
        android:layout_height="62dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/home" />

</androidx.constraintlayout.widget.ConstraintLayout>